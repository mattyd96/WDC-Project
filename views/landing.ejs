<% include partials/header %>
<% include partials/bgHome %>
<% include partials/navbar %>
<% include partials/searchbar %>
<% include partials/sign-in-modal %>



<div id="home">
    <article class="homeResults">

        <section id="recommended">

            <header class="resultHeader">
                <h3>Recommended!</h3>
            </header>

            <div class="homeResultGrid">

                <% recommended.forEach(function(hotel) { var hotelThumb = hotel.hotel_name + ".png"; %>
                    
                    <div class="hotelRoomThumbnail">
                        <a href="/hotels/<%= hotel.hotel_id %>">
                                <div class="thumbImg" style="background: url('images/<%=hotelThumb%>'); background-size: cover">
                                </div> 
                        </a>
                        <div class="thumb-flex room-name-thumb">
                            <p><%= hotel.hotel_name %></p>
                            <span class="favThis">
                                <i class="fas fa-heart"></i>
                            </span>
                        </div>
                        <div class="thumb-flex">
                            <a href="#">
                                <i class="fas fa-compass fa-lg"></i> <%= hotel.city %></a>
                            <a href="#" class="thumb-price"><%= hotel.price %></a>
                        </div>
                    </div>
                <% }); %>


            </div>
        </section>

        <section id="Popular">
