<% include partials/header %>
<% include partials/bgSearch %>
<% include partials/navbar %>
<% include partials/searchbar %>
<% include partials/sign-in-modal %>



<div id="search">
    <article class="homeResults">

        <section id="results">

            <header class="resultHeader search-result-header">
                <h3>Results</h3>
                <h3 id="map-view">
                    <a href="#" class="map-list-toggle">Map View</a>
                </h3>
                <h3 id="list-view">
                    <a href="#" class="map-list-toggle">List View</a>
                </h3>
            </header>

            <main class="homeResultGrid">

                <div class="hotelRoomThumbnail">
                    <div class="thumbImg">
                    </div>
                    <div class="thumb-flex room-name-thumb">
                        <p>Cybernet Kissaten</p>
                        <span class="favThis">
                            <i class="fas fa-heart"></i>
                        </span>
                    </div>
                    <div class="thumb-flex">
                        <a href="#">
                            <i class="fas fa-compass fa-lg"></i> Tokyo</a>
                        <a href="#" class="thumb-price">$ 100</a>
                    </div>
                </div>

                <% hotels.forEach(function(hotel) { %>

                    <div class="hotelRoomThumbnail">
                        <a href="/hotels/<%= hotel.id %>">
                                <div class="thumbImg">
                                </div>
                        </a>
                        <div class="thumb-flex room-name-thumb">
                            <p><%= hotel.name %></p>
                            <span class="favThis">
                                <i class="fas fa-heart"></i>
                            </span>
                        </div>
                        <div class="thumb-flex">
                            <a href="#">
                                <i class="fas fa-compass fa-lg"></i> <%= hotel.location %></a>
                            <a href="#" class="thumb-price"><%= hotel.price %></a>
                        </div>
                    </div>
                <% }); %>



            </main>

            <main class="map">
                <section id="map">

                </section>
            </main>
        </section>

    </article>
</div>

<script>
    var hoteru = <%- JSON.stringify(hotels) %>;

    console.log(hoteru[0]);
</script>

<script>
    var map;
    var markers = [];
    var infowindows = [];

    console.log(hoteru);
    function initMap() {

        var latitude = hoteru[0].lat;
        console.log(latitude);
        var longitude = hoteru[0].lng;
        console.log(longitude);
        var hotelLocation = {lat: latitude, lng: longitude};

        map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: hotelLocation
        });

        hoteru.forEach(function(hotel) {
            // var hotelName = hotel.name;
            var latitude = hotel.lat;
            console.log(latitude);
            var longitude = hotel.lng;
            var hotelLocation = {lat: latitude, lng: longitude};

            var infowindow = new google.maps.InfoWindow({
              //Here we edit the content of the infowindows
              content: '<div id="infoWindowText">' +  hotel.name + '</div>'
            });
            infowindows.push(infowindow);

            var marker = new google.maps.Marker({
            position: hotelLocation,
            map: map,
            title: hotel.name,
            animation: google.maps.Animation.DROP
          });

          markers.push(marker);
        });


        //adding information windows to hotels
        markers[0].addListener('click', function() {
          infowindows[0].open(map, markers[0]);
        });
        markers[1].addListener('click', function() {
          infowindows[1].open(map, markers[1]);
        });
        markers[2].addListener('click', function() {
          infowindows[2].open(map, markers[2]);
        });
        markers[3].addListener('click', function() {
          infowindows[3].open(map, markers[3]);
        });
        markers[4].addListener('click', function() {
          infowindows[4].open(map, markers[4]);
        });

    }
</script>

<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDRpaCamDo5U3yCs143HVVpDXEjgfvCz6g&callback=initMap">
</script>

